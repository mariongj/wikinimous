<h1>Wikinimous</h1>
<% @articles.each do |article| %>
  <h1><%= link_to article.title, article_path(article) %></h1>
  <p><%= article.content %></p>
  <p><%= link_to "edit", edit_article_path(article) %></p>
  <p><%= link_to "delete", article_path(article),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<br>
<p><%= link_to "Create a new article", new_article_path %></p>
